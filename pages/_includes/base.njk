{% import "./sidebar.njk" as sidebar %}
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Venture | {{ title }}</title>
        <link rel="stylesheet" href="https://unpkg.com/missing.css@1.1.3">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Della+Respira&family=Open+Sans:ital,wght@0,300..800;1,300..800&display=swap"
              rel="stylesheet">
        <script src="https://unpkg.com/hyperscript.org@0.9.13"></script>
        <script type="text/hyperscript">
        behavior menuToggle
            on click
                toggle the *display of the next <ul />
        end
        </script>
        <style>
        .prevent-selection {
            -webkit-user-select: none;
            -ms-user-select: none;
            user-select: none;
        }
        </style>
    </head>
    <body>
        <div class="sidebar-layout fullscreen">
            {{ sidebar.sidebar(category) }}
            <div class="padding">
                <main>
                    {{ content|safe }}
                </main>
            </div>
        </div>
    </body>
</html>
